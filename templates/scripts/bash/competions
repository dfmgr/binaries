# @Created       : Friday, Feb 05, 2021 11:22 EST
# @File          : template
# @Description   : autocomplete for template
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
_template() {
  local CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local appopts="--help --version"
  local ARRAY=""

  _init_completion || return

  if [[ ${cur} == -* ]] ; then
    COMPREPLY=( $(compgen -W "${appopts}" -- ${cur}) )
  else
  case $prev in
  *)
    COMPREPLY=($(compgen -W '$(_filedir)' -- "$cur"))
    return 0
    ;;
  esac
  fi
} &&
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # enable completions
  complete -F _template -o default template
