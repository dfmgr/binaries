# @File          : append_path
# @Description   : autocomplete for append_path
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
_append_path() {
  local CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local ARRAY="--help --version"

  _init_completion || return

  if [[ ${cur} == -* ]] ; then
    COMPREPLY=( $(compgen -W "${ARRAY}" -- ${cur}) )
  else
  case $prev in
  *)
    COMPREPLY=($(compgen -W '$(_filedir)' -- "$cur"))
    return 0
    ;;
  esac
  fi
} &&
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # enable completions
  complete -F _append_path -o default append_path
