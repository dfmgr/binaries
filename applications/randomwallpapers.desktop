#!/usr/bin/env xdg-open

[Desktop Entry]
Version=1.1
Type=Application
Name=Random Wallpaper
GenericName=Random Wallpaper
Comment=Change the wallpaper.
Icon=wallpaper
Exec=run_in_term randomwallpaper --term
Path=~
Terminal=true
Actions=Actions=Status;Stop;
Categories=System;GTK;Utility;TerminalEmulator;GTK;X-XFCE;GNOME;
Keywords=wallpaper;my;
StartupNotify=true

[Desktop Action Status]
Name=status
Exec=randomwallpaper --bg --status

[Desktop Action Stop]
Name=stop
Exec=randomwallpaper --bg --stop
