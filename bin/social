#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 022420211808-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : social
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : social menu
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

shopt -s extglob
#trap '' SIGINT
#trap '' SIGQUIT
#trap '' SIGTSTP # display message and pause

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

post_to_social() {
  local PMESS=
  printf_custom_question "5" "What would you like to post?"
  read PMESS
  __devnull post2social "$PMESS"
  printf_green "Posting: $PMESS"
  sleep 5
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

while true; do
  # show menu
  clear
  printf_newline "\n\n\n\n"
  printf_head "Social Media Menu"
  printf_green "0. open a new window"
  printf_green "a. launch twitter "
  printf_green "b. launch mastodon "
  printf_green "c. launch irssi "
  printf_green "d. launch finch "
  printf_green "x. post to twitter and mastodon "
  printf_green "y. launch custom application"
  printf_green "z. Exit"
  printf_green "---------------------------------"
  printf_read_question_nt "6" "Enter your choice [a-z] : " "1" "main" "-s"
  printf_newline

  # take action
  case $main in
  0)
    __devnull myterminal -e "$APPNAME" &
    ;;
  a)
    shift 1
    clear
    __cmd_exists rainbowstream && rainbowstream -iot || printf_red "rainbowstream is not installed"
    ;;
  b)
    shift 1
    clear
    __cmd_exists tootstream && tootstream || printf_red "tootstream is not installed"
    ;;
  c)
    shift 1
    clear
    __cmd_exists irssi && irssi || printf_red "irssi is not installed"
    ;;
  d)
    shift 1
    clear
    __cmd_exists finch && finch || printf_red "finch is not installed"
    ;;
  x)
    shift 1
    clear
    post_to_social
    ;;
  y)
    shift 1
    clear
    custom_menus
    ;;
  z) break ;;
  *) shift;;
esac
clear
printf_newline "\n\n"
printf_counter "5" "3" "Re-loading menu in"
done
clear

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
