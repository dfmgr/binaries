#!/usr/bin/env bash
GEN_SCRIPTS_REPLACE_FILENAME_main() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  PROG="$(basename $0)"
  VERSION="GEN_SCRIPTS_REPLACE_VERSION"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  #set opts

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  ##@Version       : GEN_SCRIPTS_REPLACE_VERSION
  # @Author        : GEN_SCRIPTS_REPLACE_AUTHOR
  # @Contact       : GEN_SCRIPTS_REPLACE_EMAIL
  # @License       : GEN_SCRIPTS_REPLACE_LICENSE
  # @ReadME        : GEN_SCRIPTS_REPLACE_FILENAME --help
  # @Copyright     : GEN_SCRIPTS_REPLACE_COPYRIGHT
  # @Created       : GEN_SCRIPTS_REPLACE_DATE
  # @File          : GEN_SCRIPTS_REPLACE_FILENAME
  # @Description   : GEN_SCRIPTS_REPLACE_DESC
  # @TODO          : GEN_SCRIPTS_REPLACE_TODO
  # @Other         : GEN_SCRIPTS_REPLACE_OTHER
  # @Resource      : GEN_SCRIPTS_REPLACE_RES
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function file
  if [ -f "$SRC_DIR/functions.bash" ]; then
    FUNCTIONS_DIR="$SRC_DIR"
    . "$FUNCTIONS_DIR/functions.bash"
  elif [ -f "$HOME/.local/bin/functions.bash" ]; then
    FUNCTIONS_DIR="$HOME/.local/bin"
    . "$FUNCTIONS_DIR/functions.bash"
  else
    printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $FUNCTIONS_DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # helper functions - See github.com/dfmgr/misc/bin/functions.bash
  __version() { app_version; }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __help() {
    app_help "4" "Usage: GEN_SCRIPTS_REPLACE_FILENAME  -  GEN_SCRIPTS_REPLACE_FILENAME --version" \
      "-c, --config           -  create config file" \
      "-a, --all              -  show all options" \
      "-l, --list             -  used by completions" \
      "-v, --version          -  display version" \
      "-h, --help             -  display help"
    exit $?
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gen_config() {
    printf_green "Generating the config file in"
    printf_green "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE"
    [ -d "$GEN_SCRIPTS_REPLACE_CONFDIR" ] || mkdir -p "$GEN_SCRIPTS_REPLACE_CONFDIR"
    [ -f "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE" ] &&
      cp -Rf "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE" "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE.$$"
    cat <<EOF >"$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE"
# Settings for GEN_SCRIPTS_REPLACE_FILENAME

EOF
    if [ -f "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE" ]; then
      printf_green "Your config file for GEN_SCRIPTS_REPLACE_FILENAME has been created"
      true
    else
      printf_red "Failed to create the config file"
      false
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Defaults
  local exitCode="" GEN_SCRIPTS_REPLACE_CONFFILE="" GEN_SCRIPTS_REPLACE_CONFDIR="" GEN_SCRIPTS_REPLACE_OPTIONS_DIR=""
  local GEN_SCRIPTS_REPLACE_CONFFILE="settings.conf"
  local GEN_SCRIPTS_REPLACE_CONFDIR="$HOME/.config/misc/configs/GEN_SCRIPTS_REPLACE_FILENAME"
  local GEN_SCRIPTS_REPLACE_OPTIONS_DIR="$HOME/.local/share/misc/options/GEN_SCRIPTS_REPLACE_FILENAME"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Argument/Option settings
  local SETARGS="${*}"
  local SHORTOPTS="a,l,c,v,h"
  local LONGOPTS="all,list,config,version,help"
  local ARRAY=""
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Generate Files
  [ -f "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR/options" ] || __list_options "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR" "$ARRAY" &>/dev/null
  [ -f "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR/array" ] || __list_array "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR" &>/dev/null
  [ -f "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE" ] || __gen_config &>/dev/null
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Import config
  [ -f "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE" ] && . "$GEN_SCRIPTS_REPLACE_CONFDIR/$GEN_SCRIPTS_REPLACE_CONFFILE"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # options
  local setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$PROG" -- "$@" 2>/dev/null)
  eval set -- "$setopts" 2>/dev/null
  while :; do
    case $1 in
    -a | --all)
      __list_options "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR" "$ARRAY"
      exit $?
      ;;
    -l | --list)
      __list_array "$GEN_SCRIPTS_REPLACE_OPTIONS_DIR"
      exit $?
      ;;
    -v | --version)
      __version
      exit $?
      ;;
    -h | --help)
      __help
      exit $?
      ;;
    -c | --config)
      __gen_config
      exit $?
      ;;
    --)
      shift 1
      break
      ;;
      #*) break ;;
    esac
    shift
  done
  set -- "$SETARGS"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Check for required applications
  cmd_exists --error bash || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  printf_green "Version:$VERSION DIR=$GEN_SCRIPTS_REPLACE_CONFDIR"

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # lets exit with code
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
GEN_SCRIPTS_REPLACE_FILENAME_main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
