user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [[ -n "$1" ]]; then
  printf_green "$(__curl -F 'sprunge=<-' "http://sprunge.us" <"$1")"
else
  printf_green "$(__curl -F 'sprunge=<-' "http://sprunge.us")"
fi

