# @File          : pkmgr
# @Description   : autocomplete for pkmgr
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
_pkmgr() {
  local CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local ARRAY="$(<$CASJAYSDEVDIR/helpers/pkmgr/array)"
  local dotfiles="$(<$CASJAYSDEVDIR/helpers/dotfiles/list)"
  _init_completion || return

  case $prev in
  help | h | --h*)
    return
    ;;

  dotfiles)
    COMPREPLY=($(compgen -W '${dotfiles}' -- "$cur"))
    return
    ;;

  script)
    COMPREPLY=($(compgen -W '--verbose --script' -- "$cur"))
    return
    ;;

  *)
    COMPREPLY=($(compgen -W '$LIST' -- "$cur"))
    ;;

  esac

  COMPREPLY=($(compgen -W '${ARRAY}' -- "$cur"))
} &&
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # enable completions
  complete -F _pkmgr -o default pkmgr
