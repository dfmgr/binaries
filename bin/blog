#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="blog"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 020320211333-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : blog --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Wednesday, Feb 03, 2021 13:33 EST
# @File          : blog
# @Description   : Blogging script using github pages
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import functions
CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}/functions"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"
SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$PWD/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
BLOG_DIR="${BLOG_DIR:-$HOME/.local/share/blog}"
EDITOR="$EDITOR"
blogdir="${blogdir:-$BLOG_DIR}"
vimoptions="${vimoptions:-"-c ':setlocal ft=notes syntax=markdown'"}"
export GITHUB_ACCESS_TOKEN="${GITHUB_ACCESS_TOKEN:-none}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[ -f "$HOME/.config/blog/settings" ] && . "$HOME/.config/blog/settings"

if [ "$1" = "-c" ]; then
  shift 1
  if [ "$1" = "default" ] || [ -z "$1" ]; then
    conf="settings"
  else
    conf="$1"
    shift 1
  fi
  [ -f "$HOME/.config/blog/$conf" ] && . "$HOME/.config/blog/$conf"
  unset conf
  [ -n "$blogdir" ] || printf_exit 1 1 "Failed to load $conf"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__blog_init() { [ -d "${blogdir}/.git" ] && [ ! -f "${blogdir}/.nogit" ] || __git_init "${blogdir}"; }
__blog_publish() { if [ ! -f "${blogdir}/.nogit" ]; then __cmd_exists gitcommit && gitcommit "$blogdir" "blog" "$*" || __git_commit "$blogdir" "${*:-Modified my blog}"; fi; }
__blog_site() { __git_remote_origin "$blogdir"; }
__blog_dir() { if [ -d "$blogdir" ]; then return 0; else return 1; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__config() {
  cat <<EOF >"$HOME/.config/blog/${name}"
# Settings for $APPNAME
unset blogdir vimoptions EDITOR
blogdir="${curblogdir}"
vimoptions="${curvimoptions}"
EDITOR="${curEDITOR}"
EOF
}

__git_message() { [ -f "$1" ] && message="Modified: $file" || message="Added: $file"; }

__edit() {
  unset WDIR
  export WDIR="$blogdir"
  __edit_menu "$@" || printf_exit 1 1 "Please enter the full path of the file"
}
__init() {
  local nogit YesNo url
  local blogdir="${1:-blogdir}"
  if [ ! -d "$blogdir/.git" ]; then
    printf_green "Initializing the repo"
    printf_read_question "3" "Do you already have a blog repo you would like to import: [y/N] " "1" "YesNo" "-s"
    if printf_answer_yes "$YesNo"; then
      printf_read_question "3" "Enter the url: " "120" "url"
      __git_clone "$url" "$blogdir"
    fi
    __mkd "$blogdir/_posts" "$blogdir/_pages"
    __blog_init "$blogdir"
    "$APPNAME" page index welcome
    printf_green "Your new blogging site has been setup" || printf_exit "Failed to initialize $blogdir"
  fi
}

__blog_post_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/post.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#DATE#$(date +"%Y-%m-%d %H:%M")#g" |
    __sed "s#TITLE#${title}#g"

}

__blog_page_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/page.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#TITLE#${title}#g"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

__newpost_template() {
  if __blog_dir; then
    local title=${1:-$title}
    local date="$(date +"%Y-%m-%d")"
    local edit="$(echo $date-$title | __sed 's# #_#g')"
    local file="$blogdir/_posts/$edit.md"
    __git_message "$file"
    __blog_post_header >"$file"
    __edit "$file"
  else
    printf_red "There is no blog directory"
  fi
}

__newpage_template() {
  local title=${2:-$title}
  local edit="$(echo $1 | __sed 's# #_#g')"
  local file="$blogdir/_pages/$edit.md"
  __git_message "$file"
  if [ ! -f "$file" ]; then
    __blog_page_header >"$file"
  fi
  __edit "$file"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__init "$blogdir"

[ -d "$blogdir/_posts" ] || __mkd "$blogdir/_posts"
[ -d "$blogdir/_pages" ] || __mkd "$blogdir/_pages"

case "$1" in
config)
  shift 1
  printf_green "Generating the config and saving it to:"
  printf_green "$HOME/.config/blog/$name"
  name="${1:-settings}"
  blogdir="${2:-$blogdir}"
  curvimoptions="$vimoptions"
  curEDITOR="$EDITOR"
  curblogdir="$blogdir"
  __mkd "$HOME/.config/blog"
  __config "$name" "$curblogdir" || printf_exit "Failed"
  __init "$curblogdir"
  ;;

new)
  shift 1
  title="${1:-welcome}" && shift 1
  date="$(date +"%Y-%m-%d")"
  edit="$(echo $date-$title | __sed 's# #_#g')"
  file="$blogdir/_posts/$edit.md"
  [ -d "$blogdir/_posts" ] || __mkd "$blogdir/_posts"
  __git_message "$file"
  __blog_post_header >"$file"
  __edit "$file"
  __blog_init "$blogdir"
  ;;

edit)
  shift 1
  __git_message "$file"
  __edit "$@"
  ;;

page)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter the filename" && exit 1
  [ -z "${2}" ] && printf_red "Please enter a title" && exit 1 || title="$2"
  __newpage_template "$1" "$2"
  ;;

post)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter a title" && exit 1 || title="$1"
  __newpost_template "$@"
  ;;

*)
  shift 1
  __help
  ;;
esac

set --
__blog_publish "$message"
printf_newline "\n\n"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
