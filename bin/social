#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts
shopt -s extglob
trap '' SIGINT
trap '' SIGQUIT
trap '' SIGTSTP

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202103201856-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : social --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Saturday, Mar 20, 2021 18:56 EDT
# @File          : social
# @Description   : Social menu written in bash
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import functions
CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}/functions"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"
SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$PWD/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE"
else
  echo "Can not load the functions file: $SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" 1>&2
  exit 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# user system devenv dfmgr dockermgr fontmgr iconmgr pkmgr systemmgr thememgr wallpapermgr
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
post_to_social() {
  local PMESS=
  printf_read_input "5" "What would you like to post?" "180" "PMESS"
  __devnull post2social "$PMESS"
  printf_green "Posting: $PMESS"
  sleep 5
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
while :; do
  # show menu
  clear
  printf_newline "\n\n\n\n"
  printf_head "Social Media Menu"
  printf_green "0. open a new window"
  printf_green "a. launch twitter "
  printf_green "b. launch mastodon "
  printf_green "c. launch irssi "
  printf_green "d. launch finch "
  printf_green "x. post to twitter and mastodon "
  printf_green "y. launch custom application"
  printf_green "z. Exit"
  printf_green "---------------------------------"
  printf_read_question_nt "6" "Enter your choice [a-z] : " "1" "main" "-s"
  printf_newline

  # take action
  case $main in
  0)
    [ -n "$DISPLAY" ] && myterminal -e "$APPNAME" || printf_error "No display found"
    ;;
  a)
    shift 1
    clear
    __cmd_exists rainbowstream && rainbowstream -iot || printf_red "rainbowstream is not installed"
    ;;
  b)
    shift 1
    clear
    __cmd_exists tootstream && tootstream || printf_red "tootstream is not installed"
    ;;
  c)
    shift 1
    clear
    __cmd_exists irssi && irssi || printf_red "irssi is not installed"
    ;;
  d)
    shift 1
    clear
    __cmd_exists finch && finch || printf_red "finch is not installed"
    ;;
  x)
    shift 1
    clear
    post_to_social
    ;;
  y)
    shift 1
    clear
    custom_menus
    ;;
  $'\E' | $'\e' | z) break ;;
  *) shift ;;
  esac
  clear
  printf_newline "\n\n"
  printf_counter "5" "3" "Re-loading menu in"
done
clear
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end

