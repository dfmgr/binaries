#!/usr/bin/env bash
# _automate_completions completion

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# autocomplete for automate

_automate_completions() {
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local ARRAY="--help play stop pause toggle state"

  _init_completion || return

  case $prev in
  state)
    COMPREPLY=($(compgen -W 'json text' -- "$cur"))
    return 0
    ;;
  *)
    COMPREPLY=($(compgen -W '$ARRAY' -- "$cur"))
    return 0
    ;;
  esac

} &&

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

  # enable completions
  complete -F _automate_completions -o default automate

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
