#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="am_i_online"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 020320211253-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL.md
# @ReadME        : am_i_online --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Wednesday, Feb 03, 2021 13:07 EST
# @File          : am_i_online
# @Description   : check to see if you can connect to internet
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set functions
SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  case $1 in
  --console)
    shift 1
    console="yes"
    site="${1:-1.1.1.1}"
    ;;
  --error)
    shift 1
    showerror=yes
    site="${1:-1.1.1.1}"
    ;;
  *)
    site="${1:-1.1.1.1}"
    ;;
  esac
  shift

  test_ping() {
    timeout 1 ping -c1 "$site" &>/dev/null
    pingExit=$?
  }

  test_http() {
    timeout 1 curl --disable -LSIs --max-time 1 $site | grep -e "HTTP/[0123456789]" | grep "200" -n1 &>/dev/null
    httpExit=$?
  }

  test_ping || test_http

  if [ "$pingExit" = 0 ] || [ "$httpExit" = 0 ]; then
    [ "$console" = "yes" ] && printf_green "$site is up: you seem to be connected to the internet"
    exitCode=0
  else
    [ "$console" = "yes" ] && printf_red "$site is down: you appear to not be connected to the internet" >&2
    [ "$showerror" = "yes" ] && printf_red "$site is down: you appear to not be connected to the internet" >&2
    exitCode=1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#execute
main "$@"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit "$exitCode"
# end
