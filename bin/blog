#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : blog
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : blogging script using github pages
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[ -f "$HOME/.config/blog/settings" ] && . "$HOME/.config/blog/settings"
vimoptions="${vimoptions:--c ":setlocal ft=notes syntax=markdown"}"
blogdir="${blogdir:-$HOME/.local/share/blog}"
EDITOR="$EDITOR"

if [ "$1" = "-c" ]; then
  shift 1
  if [ "$1" = "default" ] || [ -z "$1" ]; then
    conf="settings"
  else
    conf="$1"
  fi
  [ -f "$HOME/.config/blog/$conf" ] && . "$HOME/.config/blog/$conf"
  shift 1
  unset conf
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__blog_init() { [ -d "$blogdir/.git" ] || __git_init "$blogdir"; }
__blog_publish() { __cmd_exists gitcommit && gitcommit "$blogdir" "blog" "$*" || __git_commit "$blogdir" "${*:-Modified my blog}"; }
__blog_site() { __git_remote_origin "$blogdir"; }
__blog_dir() { if [ -d "$blogdir" ]; then return 0; else return 1; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__config() {
  cat <<EOF >"$HOME/.config/blog/${name}"
# Settings for $APPNAME
blogdir="${BLOG_DIR:-$blogdir}"
vimoptions="$vimoptions"
EDITOR="$EDITOR"
EOF
}

__git_message() { [ -f "$1" ] && message="Modified: $file" || message="Added: $file"; }

__edit() {
  WDIR="$blogdir"
  __edit_menu "$@" || printf_exit 1 1 "Please enter the full path of the file"
}

__blog_post_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/post.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#DATE#$(date +"%Y-%m-%d %H:%M")#g" |
    __sed "s#TITLE#${title}#g"

}

__blog_page_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/page.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#TITLE#${title}#g"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

__newpost_template() {
  if __blog_dir; then
    local date="$(date +"%Y-%m-%d")"
    local edit="$(echo $date-$title | __sed 's# #_#g')"
    local file="$blogdir/_posts/$edit.md"
    __blog_post_header >"$file"
    __edit "$file"
    __git_message "$file"
  else
    printf_red "There is no blog directory"
  fi
}

__newpage_template() {
  local edit="$(echo $1 | __sed 's# #_#g')"
  local file="$blogdir/_pages/$edit.md"
  if [ ! -f "$file" ]; then
    __blog_page_header >"$file"
  fi
  __edit "$file"
  __git_message "$file"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

__mkd "$blogdir/_posts" "$blogdir/_pages"

if [ ! -d "$blogdir/.git" ]; then
  printf_green "Initializing the repo"
  printf_read_question "3" "Do you already have a blog repo you would like to import: [y/N]" "1" "Yn" "-s"
  if printf_answer_yes "Yn"; then
    printf_read_question "3" "If you already have a repo enter the url here: " "120" "url"
    __git_clone "$url" "$blogdir"
  else
    __blog_init && $APPNAME page index welcome
  fi
  printf_green "Your new blogging site has been setup" || printf_exit "Failed to initialize $blogdir"
fi

case "$1" in
config)
  shift 1
  name="${1:-settings}"
  printf_green "Generating the config and saving it to:"
  printf_green "$HOME/.config/blog/$name"
  __mkd "$HOME/.config/blog"
  __config "$name" && exit || printf_exit "Failed"
  ;;

new)
  shift 1
  title="${1:-welcome}" && shift 1
  date="$(date +"%Y-%m-%d")"
  edit="$(echo $date-$title | __sed 's# #_#g')"
  file="$blogdir/_posts/$edit.md"
  [ -d "$blogdir/_posts" ] || __mkd "$blogdir/_posts"
  __blog_post_header >"$file"
  __edit "$file"
  __blog_init "$blogdir"
  __git_message "$file"
  ;;

edit)
  shift 1
  __edit "$@"
  __git_message "$file"
  ;;

page)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter the filename" && exit 1
  [ -z "${2}" ] && printf_red "Please enter a title" && exit 1 || title="$2"
  __newpage_template "$@"
  ;;

post)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter a title" && exit 1 || title="$1"
  __newpost_template "$@"
  ;;

*)
  shift 1
  __help
  ;;
esac

set --
__blog_publish "$message"
printf_newline "\n\n"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
