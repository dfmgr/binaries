#!/usr/bin/env bash

APPNAME="update-motd"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
PATH="/usr/games:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : jason@casjaysdev.com
# @File        : update-motd
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Update the MOTD and ISSUE files
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
else
  mkdir -p "/tmp/CasjaysDev/functions"
  curl -LSs "$SCRIPTSFUNCTURL/$SCRIPTSFUNCTFILE" -o "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE" || exit 1
  . "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[ "$1" = "--version" ] && get_app_info "$APPNAME"
[ "$1" = "--help" ] && printf_help "Usage: update-motd"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
sudo rm -Rf /etc/issue* /etc/motd*

scriptsversion="$(cat /etc/casjaysdev/updates/versions/scripts.txt)"
configsversion="$(cat /etc/casjaysdev/updates/versions/configs.txt)"
scriptsdate="$(cat /etc/casjaysdev/updates/versions/date.configs.txt)"
configsdate="$(cat /etc/casjaysdev/updates/versions/configs.txt)"

motd_fortune() {
if [ "$(command -v fortune 2>/dev/null)" ] && [ -n "$(command -v cowsay 2>/dev/null)" ]; then
  printf "\n\n\n" | sudo tee -a /etc/motd >>/dev/null 2>&1
  fortune | cowsay | sudo tee -a /etc/motd >>/dev/null 2>&1
  printf "\n\n" | sudo tee -a /etc/motd >>/dev/null 2>&1
else
  printf "\n\n" | sudo tee -a /etc/motd >/dev/null 2>&1
fi
}

messages_motd() {
local messages=$(ls "/etc/casjaysdev/messages/motd/" 2>/dev/null | wc -l)
if [ "$messages" != "0" ]; then
  cat /etc/casjaysdev/messages/motd/* | sudo tee -a /etc/motd >>/dev/null 2>&1
fi
}

messages_issue() {
local messages=$(ls "/etc/casjaysdev/messages/issue/" 2>/dev/null | wc -l)
if [ "$messages" != "0" ]; then
  cat /etc/casjaysdev/messages/issue/* | sudo tee -a /etc/issue >>/dev/null 2>&1
fi
}

conf_versions() {
if if_os_id debian; then
  printf "Debian version: $distro_version  |  Config version: $configsversion\n" | sudo tee -a /etc/motd >/dev/null 2>&1
fi

if if_os_id rhel; then
  printf "RHEL version: $distro_version  |  Config version: $configsversion\n" | sudo tee -a /etc/motd >/dev/null 2>&1
fi

if if_os_id arch; then
  printf "Arch version: $distro_version  |  Config version: $configsversion\n" | sudo tee -a /etc/motd >/dev/null 2>&1
fi
printf "configs were last updated on: $configsversion\n" | sudo tee -a /etc/motd >/dev/null 2>&1
printf "scripts package was last updated on: $scriptsdate\n" | sudo tee -a /etc/motd >/dev/null 2>&1
printf "Messages were last updated on: $(date +"%b %d, %Y at %H:%M")\n\n" | sudo tee -a /etc/motd >/dev/null 2>&1
}

finalize() {
sudo touch /etc/issue /etc/motd
printf "\n\n" | sudo tee -a /etc/motd >/dev/null 2>&1
cat /etc/motd | sudo tee -a /etc/motd.net >/dev/null 2>&1
cat /etc/issue | sudo tee -a /etc/issue.net >/dev/null 2>&1
if [ "$1" = "--console" ]; then
cat /etc/issue /etc/motd
fi
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# main function
main () {
  motd_fortune
  messages_motd
  messages_issue
  conf_versions
  finalize
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# run app
main "$@"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

exit $?
