#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 011320210115-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : automate
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : home automation
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main() {
# functions
state="/tmp/automate"
getstate() { cat $state; }
roku_play() { roku play; }
roku_stop() { roku stop; }
roku_pause() { roku pause; }
hue_on() { hue on; }
hue_off() { hue off; }
automate_play() { roku_play && hue_on && echo play >$state; }
automate_stop() { roku_stop && hue_off && echo stop >$state; }
automate_pause() { roku pause && hue toggle && echo pause >$state ; }
toggle() {
if [ "$(getstate)" = play ]; then
  automate_stop
elif [ "$(getstate)" = stop ]; then
  automate_play
elif  [ "$(getstate)" = pause ]; then
  automate_pause
fi
}

case $1 in
  play)
    shift 1
    automate_play
    ;;
  stop)
    shift 1
    automate_stop
    ;;
  pause)
    shift 1
    automate_pause
    ;;
  toggle)
    shift 1
    toggle
    ;;

  state)
    case "$2" in
    json)
      echo '{"status":"$(getstate)"}' | jq
      ;;
  esac
  ;;

  *)
    shift 0
    [ "$1" = "--help" ] && printf_help "automate play, pause, stop"
    printf_help "automate play, pause, stop toggle"
    ;;

  esac
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main "$@"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end

