#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : music
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : play music
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

MPDSERVER="${MPDSERVER:-localhost}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

shopt -s extglob
trap '' SIGINT
trap '' SIGQUIT
trap '' SIGTSTP # display message and pause

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

while :; do
  # show menu
  clear
  printf_head "Music Menu"
  printf_green "a. launch mpc"
  printf_green "b. launch deadbeef"
  printf_green "c. launch cmus"
  printf_green "d. launch ncmpcpp"
  printf_green "e. launch vlc"
  printf_green "f. launch castero"
  printf_green "g. launch spotifyd"
  printf_green "h. launch pianobar"
  printf_green "i. launch curseradio-improved"
  printf_green "j. launch youtube-viewer"
  printf_green "k. launch tizonia"
  printf_green "l. launch clementine"
  printf_green "m. launch rhythmbox"
  printf_green "n. launch tomahawk"
  printf_green "o. launch amarok"
  printf_green "p. launch qmmp"
  printf_green "q. launch lollyop"
  printf_green "r. launch moc"
  printf_green "s. launch parole"

  printf_green "y. launch custom application"
  printf_green "z. or escape to Exit"
  printf_green "---------------------------------"
  printf_read_question "6" "Enter your choice [a-z] : " "1" "main" "-s"

  # take action
  case "$main" in
  a)
    clear
    shift 1
    printf_custom "4" "connected to $MPDSERVER"
    printf_green "a. toggle"
    printf_green "n. next"
    printf_green "p. prev"
    printf_green "r. play"
    printf_green "s. stop"
    printf_green "z. back to menu"
    printf_read_question "6" "Enter your choice  : " "1" "mpc" "-s"
    case "$mpc" in
    a) mpc -h "${MPDSERVER}" toggle ;;
    n) mpc -h "${MPDSERVER}" next ;;
    p) mpc -h "${MPDSERVER}" prev ;;
    r) mpc -h "${MPDSERVER}" play ;;
    s) mpc -h "${MPDSERVER}" stop ;;
    *) false ;;
    esac
    clear
    ;;
  b)
    shift 1
    __run_prog_menus deadbeef
    ;;
  c)
    shift 1
    __run_command cmus
    ;;
  d)
    shift 1
    __run_command ncmpcpp -h "$MPDSERVER"
    ;;
  e)
    shift 1
    __open_file_menus vlc
    ;;
  f)
    shift 1
    __run_command castero
    ;;
  g)
    shift 1
    __run_prog_menus spotifyd
    ;;
  h)
    shift 1
    __run_command pianobar
    ;;
  i)
    shift 1
    __run_command curseradio-improved
    ;;
  j)
    shift 1
    __run_prog_menus youtube-viewer
    ;;
  k)
    shift 1
    __run_prog_menus tizonia
    ;;
  l)
    shift 1
    __run_prog_menus clementine
    ;;
  m)
    shift 1
    __run_prog_menus rhythmbox
    ;;
  n)
    shift 1
    __run_prog_menus tomahawk
    ;;
  o)
    shift 1
    __run_prog_menus amarok
    ;;
  p)
    shift 1
    __run_prog_menus qmmp
    ;;
  q)
    shift 1
    __run_prog_menus lollyop
    ;;
  r)
    shift 1
    __run_prog_menus moc
    ;;
  s)
    shift 1
    __run_prog_menus parole
    ;;
  y)
    shift 1
    __custom_menus
    ;;
  z)
    clear
    break
    ;;
  $'\e')
    clear
    break
    ;;
  *)
    printf_custom "42" "$main was invalid choice - Please try a different selection"
    sleep 3
    continue
    ;;
  esac
done

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
