#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202103201920-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : sudoers --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Saturday, Mar 20, 2021 19:20 EDT
# @File          : sudoers
# @Description   : add and remove users from sudo
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import functions
CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}/functions"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"
SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$PWD/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE"
else
  echo "Can not load the functions file: $SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" 1>&2
  exit 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# user system devenv dfmgr dockermgr fontmgr iconmgr pkmgr systemmgr thememgr wallpapermgr
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
MYUSER="${SUDO_USER:-$(whoami)}"
if [ -n "$2" ]; then
  MYUSER="$2"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[ $# = 0 ] && __help
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ $# -ne 0 ] && can_i_sudo; then
  __devnull sudo chmod 750 /etc/sudoers.d
  case "$1" in
  remove)
    shift 1
    printf_green "New password prompt"
    sudo passwd "$MYUSER" || exit 1
    printf_green "Removing $MYUSER sudoers file"
    __devnull sudo rm -Rf "/etc/sudoers.d/$MYUSER"
    ;;

  pass)
    shift 1
    printf_green "New password prompt"
    sudo passwd "$MYUSER" || exit 1
    printf_green "Removing $MYUSER from sudoers - password now required"
    __devnull sudo rm -Rf "/etc/sudoers.d/$MYUSER"
    ;;

  remuser)
    shift 1
    printf_green "New password prompt"
    sudo passwd "$MYUSER" || exit 1
    printf_green "Removing $MYUSER from sudoers"
    if sudo grep -q -E "^sudo:" /etc/group; then
      __devnull sudo deluser "$MYUSER" sudo
    else
      __devnull sudo deluser "$MYUSER" wheel
    fi
    __devnull sudo rm -Rf "/etc/sudoers.d/$MYUSER"
    ;;

  adduser)
    shift 1
    printf_green "Adding $MYUSER to sudoers"
    if sudo grep -q -E "^sudo:" /etc/group; then
      __devnull sudo usermod -aG sudo "$MYUSER"
    else
      __devnull sudo usermod -aG wheel "$MYUSER"
    fi
    __devnull2 echo "$MYUSER ALL=(ALL)   NOPASSWD: ALL" | sudo tee "/etc/sudoers.d/$MYUSER" &>/dev/null
    __devnull sudo chown -f root:root "/etc/sudoers.d/$1"
    __devnull sudo chmod -f 440 "/etc/sudoers.d/$1"
    ;;

  nopass)
    shift 1
    printf_green "Adding $MYUSER to sudoers"
    __devnull2 echo "$MYUSER ALL=(ALL)   NOPASSWD: ALL" | sudo tee "/etc/sudoers.d/$MYUSER" &>/dev/null
    __devnull sudo chown -f root:root "/etc/sudoers.d/$MYUSER"
    __devnull sudo chmod -f 440 "/etc/sudoers.d/$MYUSER"
    ;;

  insults)
    shift 1
    printf_green "Adding insults"
    if __devnull2 sudo bash -c '[ ! -f "/etc/sudoers.d/insults" ]'; then
      echo "Defaults    insults" | sudo tee "/etc/sudoers.d/insults" &>/dev/null
      sudo chown -f root:root "/etc/sudoers.d/insults"
    fi
    ;;

  esac
else
  printf_red "You dont have access to sudo"
  printf_red "Please contact the syadmin for access"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
