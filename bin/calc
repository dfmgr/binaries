#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : calc
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : calculator wrapper for qalc/bc
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
systemmgr_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[ -z "$1" ] && __help
if [ $# -ne 1 ]; then
  printf_info 'You must quote your params IE: calc "2 + 4" or "2*2"'
  exit 1
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ARG="$(echo "$*" | sed '/^$/d;s/[[:blank:]]//g')"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if cmd_exists qalc; then
  calc_app() { qalc "$ARG"; }
elif cmd_exists bc; then
  calc_app() { echo "$ARG = $(echo "$ARG" | bc -q)"; }
else
  printf_exit "Can't find a calculator app!"
fi

if [ "$1" = "--term" ]; then
  clear
  echo -e "\n\n"
  printf_cyan "Usage: 20*4/2+23-14"
  printf_red "press q or ctrl + c to exit"
  while :; do
    printf_custom_question "2" "What is it you would like to solve?  "
    read ARG
    if [ "$ARG" = "q" ]; then
      exit 0
    else
      printf_custom "5" "  Your answer is: $(calc_app)"
    fi
  done
else
  printf_green "$(calc_app)"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end
