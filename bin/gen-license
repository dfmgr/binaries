#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : gen-license
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Create a license file
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
systemmgr_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__check_app curl

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[ -f "$HOME/.config/gen-license/settings" ] && . "$HOME/.config/gen-license/settings"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
licenseDir="${licenseDir:-$HOME/.config/gen-license/files}"
licenseURL="${licenseURL:-$WHICH_LICENSE_URL}"
licenseFile="${licenseFile:-wtfpl.md}"
whichLicense="$(echo "$1" | tr [A-Z] [a-z])"
gitconfig_user="${gitconfig_user:-$(__git_globaluser)}"
gitconfig_email="${gitconfig_email:-$(__git_globalemail)}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -d "$licenseDir" ] && [ "$(__count_files "$licenseDir")" -ne 0 ]; then
  licenseURL="$licenseDir"
  get_lic() { cat "$1" >LICENSE.md 2>/dev/null || printf_exit "Failed to get the license file"; }
else
  get_lic() { __curl "$1" >LICENSE.md 2>/dev/null || printf_exit "Failed to get the license file"; }
fi

gen_config() {
  cat <<EOF
# Settings for $APPNAME
licenseFile="$licenseFile"
licenseDir="$licenseDir"
licenseURL="$WHICH_LICENSE_URL"
gitconfig_user="$gitconfig_user"
gitconfig_email="$gitconfig_email"

EOF
}

create_new_wtfpl() {
  if [[ "$licenseFile" =~ wtfpl ]]; then
    [ -f ./LICENSE.md ] && sed -i "s# 2004 # $(date +'%Y') #g" "./LICENSE.md"
    [ -f ./LICENSE.md ] && sed -i "s#Sam Hocevar#${gitconfig_user}#g" "./LICENSE.md"
    [ -f ./LICENSE.md ] && sed -i "s#sam@hocevar.net#${gitconfig_email}#g" "./LICENSE.md"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

case "$whichLicense" in

list)
  shift 1
  cat "${SCRIPTSFUNCTDIR}/helpers/gen-license/array" | printf_readline "2"
  ;;

config)
  shift
  printf_green "Generating the config file $HOME/.config/gen-license/settings"
  gen_config >"$HOME/.config/gen-license/settings"
  ;;

download)
  shift
  printf_green "Cloning the repo to $licenseDir/files"
  __git_clone "$licenseURL " "$licenseDir/files"
  ;;

wtfpl)
  shift
  printf_green "Using the WTFPL license"
  get_lic "$licenseURL/wtfpl.md"
  create_new_wtfpl
  ;;

gpl1)
  shift
  printf_green "Using the GPL V1 license"
  get_lic "$licenseURL/gnu-gpl-v1.0.md"
  ;;

gpl2)
  shift
  printf_green "Using the GPL V2 license"
  get_lic "$licenseURL/gnu-gpl-v2.0.md"
  ;;

gpl3)
  shift
  printf_green "Using the GPL V3 license"
  get_lic "$licenseURL/gnu-gpl-v3.0.md"
  ;;

agpl)
  shift
  printf_green "Using the AGPL license"
  get_lic "$licenseURL/gnu-agpl-v3.0.md"
  ;;

fdl)
  shift
  printf_green "Using the FDL license"
  get_lic "$licenseURL/gnu-fdl-v1.3.md"
  ;;

mit)
  shift
  printf_green "Using the MIT license"
  get_lic "$licenseURL/mit.md"
  ;;

apache)
  shift
  printf_green "Using the Apache license"
  get_lic "$licenseURL/apache-v2.0.md"
  ;;

bsd3)
  shift
  printf_green "Using the BSD license"
  get_lic "$licenseURL/gnu-fdl-v1.3.md"
  ;;

*)
  shift
  printf_green "Using the default license: $licenseFile"
  get_lic "$licenseURL/$licenseFile"
  create_new_wtfpl
  ;;

esac

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
