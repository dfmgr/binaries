#!/usr/bin/env bash

APPNAME="update-ip"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
PATH="/usr/games:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##Version      : 010820210439-git
# @Author      : Jason
# @Contact     : jason@casjaysdev.com
# @File        : update-ip
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Updates the ip address for motd and issue files
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
else
  mkdir -p "/tmp/CasjaysDev/functions"
  curl -LSs "$SCRIPTSFUNCTURL/$SCRIPTSFUNCTFILE" -o "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE" || exit 1
  . "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[ "$1" = "--version" ] && get_app_info "$APPNAME"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

HOST=$(hostname -f)
HOSTNAME=$(hostname -f)
HOSTSHORT=$(hostname -s)

getlipaddr

if [ -f "/etc/casjaysdev/messages/legal.txt" ]; then
  devnull sudo find "/etc/casjaysdev/messages" -not -path ".git/*" -type f -exec sed -i "s#MY IP Adress is.*#MY IP Adress is:   $CURRIP4#g" {} \; >/dev/null 2>&1
fi

if [ -f "/etc/issue" ]; then
  devnull sudo find "/etc/issue" -not -path ".git/*" -type f -exec sed -i "s#MY IP Adress is.*#MY IP Adress is:   $CURRIP4#g" {} \; >/dev/null 2>&1
fi

if [ -f "/etc/motd" ]; then
  devnull sudo find "/etc/motd" -not -path ".git/*" -type f -exec sed -i "s#MY IP Adress is.*#MY IP Adress is:   $CURRIP4#g" {} \; >/dev/null 2>&1
fi

if [ -f "/etc/issue.net" ]; then
  devnull sudo find "/etc/issue.net" -not -path ".git/*" -type f -exec sed -i "s#MY IP Adress is.*#MY IP Adress is:   $CURRIP4#g" {} \; >/dev/null 2>&1
fi

if [ -f "/etc/motd.net" ]; then
  devnull sudo find "/etc/motd.net" -not -path ".git/*" -type f -exec sed -i "s#MY IP Adress is.*#MY IP Adress is:   $CURRIP4#g" {} \; >/dev/null 2>&1
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

exit $?
