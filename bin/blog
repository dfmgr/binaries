#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : blog
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : blogging script using github pages
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
blogdir="${BLOG_DIR:-$HOME/.local/share/blog}"

__blog_init() { __git_pull "$blogdir"; }
__blog_publish() { __git_porcelain "$blogdir" && __git_commit "$blogdir"; }
__blog_site() { __git_remote_origin "$blogdir"; }

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

__blog_post_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/post.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#DATE#$(date +"%Y-%m-%d %H:%M")#g" |
    __sed "s#TITLE#${title}#g"

}

__blog_page_header() {
  cat "$SCRIPTSFUNCTDIR/templates/blog/page.md" |
    __sed "s#AuthorName#${USER}#g" |
    __sed "s#TITLE#${title}#g"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

__blog_dir() { [ -d "$blogdir" ] && return 0 || return 1; }

__newpost_template() {
  if __blog_dir; then
    local date="$(date +"%Y-%m-%d")"
    local edit="$(echo $date-$title | __sed 's# #_#g')"
    local file="$blogdir/_posts/$edit.md"
    __blog_post_header >"$file"
    __vim -c ":setlocal ft=notes syntax=markdown" "$file"
  else
    printf_red "There is no blog directory"
  fi
}

__newpage_template() {
  local edit="$(echo $1 | __sed 's# #_#g')"
  local file="$blogdir/_pages/$edit.md"
  if [ ! -f "$file" ]; then
    __blog_page_header >"$file"
  fi
  __vim -c ":setlocal ft=notes syntax=markdown" "$file"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

case "$1" in

new)
  shift 1
  newdir="${1:-$blogdir}"
  title="${2:-welcome}"
  date="$(date +"%Y-%m-%d")"
  edit="$(echo $date-$title | __sed 's# #_#g')"
  file="$newdir/_posts/$edit.md"
  __mkd "$newdir/_posts" "$newdir/_pages"
  __blog_post_header >"$file"
  __git_init "$newdir"
  ;;
page)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter the filename" && exit 1
  [ -z "${2}" ] && printf_red "Please enter a title" && exit 1 || title="$2"
  __newpage_template "$@"
  __blog_publish "$blogdir"
  ;;

post)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter a title" && exit 1 || title="$1"
  __newpost_template "$@"
  __blog_publish "$blogdir"
  ;;

edit)
  shift 1
  [ -z "${1}" ] && printf_red "Please enter the full path of the file" && exit 1
  edit="${1}"
  file="$edit"
  __vim "$file"
  __blog_publish "$blogdir"
  ;;

*)
  shift 1
  __help
  ;;

esac

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end
