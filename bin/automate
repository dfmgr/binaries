#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 011320210115-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : automate
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : home automation
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# variables

hue_device="$(__hostname2ip ${HUE_HUB_DEVICE:-$1})"
hue_api_key="${HUE_ACCESS_TOKEN}"

[ -n "$hue_api_key" ] || printf_exit "HUE_API_KEY is not set"
[ -n "$hue_device" ] || printf_exit "HUE_DEVICE is not set"
[ -z "$1" ] && __help

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

DEVICE_API="http://$hue_device/api/$hue_api_key"
GROUPS_API="http://$hue_device/api/$hue_api_key/groups/0/action"

if [ "$1" = "--testing" ]; then
  shift 1
  case "$1" in
    state) curl -LSs "$GROUPS_API" | tr ',"' '\n" ' | sed 's#{}##g;s#"state":{##g' | grep 'all_on' | grep false ;;
    info)
      printf_green "$(curl -LSs $DEVICE_API | jq )"
      printf_green "Device     | $hue_device"
      printf_green "API Key    | $hue_api_key"
      printf_green "Device API | $DEVICE_API"
      ;;
    *) exit ;;
  esac
fi

case "$1" in
start) __devnull curl -X PUT "http://$hue_device/api/$hue_api_key/groups/0/action" -d '{"on":true}' ;;
off | false | 1) __devnull curl -X PUT "http://$hue_device/api/$hue_api_key/groups/0/action" -d '{"on":false}' ;;
on | true | 0) __devnull curl -X PUT "http://$hue_device/api/$hue_api_key/groups/0/action" -d '{"on":true}' ;;
*) __devnull curl -X PUT "http://$hue_device/api/$hue_api_key/groups/0/action" -d '{"on":true}' ;;
esac


# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $exitCode

# end
