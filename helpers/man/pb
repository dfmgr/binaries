printf_help "pb; a command line pastebin service helper"
printf_help "usage: pb <service> [file|stream]"
printf_help ""
printf_help "services:""
printf_help "   0x0.st, catbox.moe, clbin.com, dmca.gripe,"
printf_help "   dumpz.org, fiery.me, ix.io, p.iotek.org,"
printf_help "   pastebin.com, sprunge.us, uguu.se, w1r3.net"
printf_help ""
printf_help "environment variables:"
printf_help "   UA: user-agent string (defaults to some chrome one)"
printf_help ""
printf_help "envs for pastebin.com:"
printf_help "   PB_API_DEV: developer api key [required] https://pastebin.com/api#1"
printf_help "   PB_API_USR: user api key [optional] https://pastebin.com/api#8"
printf_help "   PRIVACY: paste visibility  [optional] valid values: public|0, unlisted|1, private|2"
printf_help "   ANON: paste w/o a user key even if defined [optional]"
printf_help ""
printf_help "examples:"
printf_help "   pb ix ~/.vimrc"
printf_help "   pb 0x0 <(ps aux)"
printf_help "   dmesg | pb iop"
printf_help "   PB_API_DEV=XXXX PRIVACY=0 pb pb /tmp/leak.txt"
printf_help "   UA="Mozilla/5.0 (PlayStation 4 5.55) AppleWebKit/601.2 (KHTML, like Gecko)" pb uguu /tmp/x"
