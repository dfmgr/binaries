#!/usr/bin/env bash
#----------------
printf_color() { printf "%b" "$(tput setaf "$2" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
printf_help() {
  test -n "$1" && test -z "${1//[0-9]/}" && local color="$1" && shift 1 || local color="4"
  local msg="$*"
  shift
  printf_color "\t\t$msg\n" "$color"
}
#----------------
printf_help "2" "A git utility for keeping your dotfiles in a git repo"
printf_help "4" "usage: config init add commit push help set remote checkout"
printf_help "4" " "
printf_help "4" "These are common config commands used in various situations:"
printf_help "4" " "
printf_help "4" "start a working area"
printf_help "4" "init       Create an empty config repository or reinitialize an existing one"
printf_help "4" " "
printf_help "4" "work on the current change"
printf_help "4" "add        Add file contents to the index"
printf_help "4" "mv         Move or rename a file, a directory, or a symlink"
printf_help "4" "reset      Reset current HEAD to the specified state"
printf_help "4" "rm         Remove files from the working tree and from the index"
printf_help "4" " "
printf_help "4" "examine the history and state"
printf_help "4" "bisect     Use binary search to find the commit that introduced a bug"
printf_help "4" "grep       Print lines matching a pattern"
printf_help "4" "log        Show commit logs"
printf_help "4" "show       Show various types of objects"
printf_help "4" "status     Show the working tree status"
printf_help "4" " "
printf_help "4" "grow, mark and tweak your common history"
printf_help "4" "branch     List, create, or delete branches"
printf_help "4" "checkout    Switch branches or restore working tree files"
printf_help "4" "commit     Record changes to the repository"
printf_help "4" "diff       Show changes between commits, commit and working tree, etc"
printf_help "4" "merge      Join two or more development histories together"
printf_help "4" "rebase     Reapply commits on top of another base tip"
printf_help "4" "tag        Create, list, delete or verify a tag object signed with GPG"
printf_help "4" " "
printf_help "4" "collaborate"
printf_help "4" "fetch      Download objects and refs from another repository"
printf_help "4" "pull       Fetch from and integrate with another repository or a local branch"
printf_help "4" "push       Update remote refs along with associated objects"
