# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Friday, Feb 05, 2021 11:22 EST
# @File          : gen-readme
# @Description   : autocomplete for gen-readme
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
_gen-readme() {
  local CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local GEN_README_DIR="$HOME/.config/gen-readme/files"
  local ARRAY="all $(<$CASJAYSDEVDIR/helpers/gen-readme/array)"
  local INST="$(ls -A $GEN_README_DIR/installers | sed 's#'$GEN_README_DIR/'##g' 2>/dev/null)"
  local PROJ="$(ls -A $GEN_README_DIR/projects | sed 's#'$GEN_README_DIR/'##g' 2>/dev/null)"
  local ALL="$(find ${GEN_README_DIR}/ -type f -not -path "${GEN_README_DIR}/*/.git/*" | sed 's#'$GEN_README_DIR/'##g' | sort -u)"

  _init_completion || return

  case $prev in
  project*)
    COMPREPLY=($(compgen -W '$PROJ' -- "$cur"))
    return
    ;;

  install*)
    COMPREPLY=($(compgen -W '$INST' -- "$cur"))
    return
    ;;

  all)
    COMPREPLY=($(compgen -W '$ALL' -- "$cur"))
    return
    ;;
  *)
    COMPREPLY=($(compgen -W '$ARRAY' -- "$cur"))
    return
    ;;
  esac
} &&
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # enable completions
  complete -F _gen-readme -o default gen-readme
